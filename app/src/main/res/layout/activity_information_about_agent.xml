<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationAboutAgent">

    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:weightSum="2">

            <EditText
                android:id="@+id/textViewAgentLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/textViewAgentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text=""
                android:textAlignment="center"

                android:textColor="@color/design_default_color_primary"

                android:textColorHint="@color/design_default_color_primary_dark"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_insured"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/textViewCountInsuredCars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/textViewCountInsuredHouses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text=""
                android:textAlignment="center"

                android:textColor="@color/design_default_color_primary"

                android:textColorHint="@color/design_default_color_primary_dark"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboveLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topLinear"
        android:gravity="center"
        android:layout_above="@+id/belowLinear"
        android:orientation="vertical">


        <ListView
            android:id="@+id/list_item_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

        </ListView>

        <ListView
            android:id="@+id/list_item_houses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/belowLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/button_change"
            android:textColor="@color/white">

        </Button>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/button_delete"
            android:textColor="@color/white">

        </Button>

    </LinearLayout>

</RelativeLayout>